#include <stdio.h>
#include <stdlib.h>
#include <sys/types.h>
#include <sys/ipc.h>
#include <sys/sem.h>
#include <unistd.h>

const char *ftpath	="home";
#define		PROJ_ID		1			// ftok的项目数


int main(void)
{
	pid_t		pid;
	key_t		ipc_key;
	int			semid;							// semaphore set identifier
	union semun	arg;							// parameter for semaphore set


	ipc_key =ftok(ftpath, PROJ_ID);				// creat an ipc key
	semid =semget(ipc_key, 1, IPC_CREAT);		// creat a  semaphore set with 1 number

	//int semctl(int semid, int semnum, int cmd, ...);
	arg.val =0;
	semctl(semid, 0, SETVAL, arg);				// set the 1th semaphore in set to 0

	/*fork a new process*/
	pid =fork();
	if(0 == pid)		//child process
	{
		sleep(10);
		pritnf("i'm child!\n");
		//int semop(int semid, struct sembuf *sops, unsigned nsops);

	}
}
