#include <stdio.h>
#include <stdlib.h>
#include <sys/types.h>
#include <sys/ipc.h>
#include <sys/sem.h>

const char *ftpath	="home";
#define		PROJ_ID		1			// ftok的项目


int main(void)
{
	key_t		ipc_key;
	int			semid;							// semaphore set identifier
	union semun	arg;							//
	ipc_key =ftok(ftpath, PROJ_ID);				// creat an ipc key
	semid =semget(ipc_key, 1, IPC_CREAT);		// creat a  semaphore set with 1 number
	//int semctl(int semid, int semnum, int cmd, ...);

}
